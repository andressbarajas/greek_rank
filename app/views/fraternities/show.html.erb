<h3><%= "Highest Rated #{@fraternity.name} Chapters" %></h3>

<%= link_to 'Edit this Fraternity', edit_fraternity_path(@fraternity) %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th colspan="1">School Name</th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= link_to "#{university.name} - #{university.initials}", university %></td>
      </tr>
    <% end %>
  </tbody>
</table>

