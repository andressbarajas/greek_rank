<h3><%= "Highest Rated #{@sorority.name} Chapters" %></h3>

<% if is_an_admin? %>
  <%= link_to 'Edit this Sorority', edit_sorority_path(@sorority) %>
<% end %>

<table class="table table-striped table-condensed">
  <thead>
    <tr>
      <th colspan="1">School Name</th>
    </tr>
  </thead>

  <tbody>
    <% @universities.each do |university| %>
      <tr>
        <td><%= link_to "#{university.name} - #{university.initials}", university %></td>
      </tr>
    <% end %>
  </tbody>
</table>
