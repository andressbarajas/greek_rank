<%= form_for(@article) do |f| %>
  <%= f.label_tag(:url, "Url:") %><br>
  <%= f.text_field_tag("welcome[url]", nil, size: 40) %><br>

  <%= f.label_tag(:title, "Title:") %><br>
  <%= f.text_field_tag("welcome[title]", nil, size: 40) %><br>

  <%= f.label_tag(:summary, "Summary:") %><br>
  <%= f.text_area_tag("welcome[summary]", nil, rows: 10, cols: 60) %><br>

  <%= submit_tag("Submit") %>
<% end %>