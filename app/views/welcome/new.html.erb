<%= form_tag(welcome_index_path) do %>
  <%= label_tag(:url, "Url:") %><br>
  <%= text_field_tag("welcome[url]", nil, size: 40) %><br>

  <%= label_tag(:title, "Title:") %><br>
  <%= text_field_tag("welcome[title]", nil, size: 40) %><br>

  <%= label_tag(:summary, "Summary:") %><br>
  <%= text_area_tag("welcome[summary]", nil, rows: 10, cols: 60) %><br>

  <%= submit_tag("Submit") %>
<% end %>