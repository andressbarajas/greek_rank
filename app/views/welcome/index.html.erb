
<% if is_an_admin? %>
  <%= link_to 'Create an Article', new_welcome_path %>
<% end %>

<% @articles.each do |article| %>
  <h3><%= link_to article.title, "#{article.url}" %></h3>
  <% if is_an_admin? %>
    <%= link_to 'Edit this Article', edit_welcome_path(article) %>
    <br>
  <% end %>
  <%= article.summary %>
  <hr>
<% end %>

