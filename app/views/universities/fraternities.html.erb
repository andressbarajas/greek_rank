
<%= render partial: "shared/uni_category_panel", :locals => { category_panel_body: "frat_panel_body" } %>
<br>
<table class="table table-striped">
  <thead>
    <tr>
      <th colspan="3">Fraternities</th>
    </tr>
  </thead>

  <tbody>
    <% @chapters.each do |chapter| %>
      <tr>
        <td><%= link_to "#{chapter.fraternity.name} - #{chapter.fraternity.letters}", 
                        fraternity_chapter_path(chapter) %></td>
    <% end %>
  </tbody>
</table>