
<%= form_for([@chapter, @rating]) do |f| %>
  <%= label_tag(:nick_name, "Nickname:") %><br>
  <%= text_field_tag('rating[nick_name]') %><br>
  <%= label_tag(:message, "Message:") %><br>
  <%= text_area_tag('rating[message]') %><br>

  <%= label_tag(:looks, "Looks:") %>
  <%= number_field_tag('rating[looks]', nil) %>
  <%= label_tag(:popularity, "Popularity:") %>
  <%= number_field_tag('rating[popularity]', nil) %>
  <%= label_tag(:classiness, "Classiness:") %>
  <%= number_field_tag('rating[classiness]', nil) %>
  <%= label_tag(:involvement, "Involvement:") %>
  <%= number_field_tag('rating[involvement]', nil) %>
  <%= label_tag(:socialness, "Socialness:") %>
  <%= number_field_tag('rating[socialness]', nil) %>
